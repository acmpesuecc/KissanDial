# Copy this file to .env and replace placeholders with real keys. Do not commit .env

# LLM Configuration - Choose your preferred LLM provider
# Option 1: OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Google Gemini (currently active)
GEMINI_API_KEY=your_gemini_api_key_here
LLM_PROVIDER=gemini  # Options: 'openai' or 'gemini'

# Model Selection (optional - defaults to latest models)
# For OpenAI: gpt-4o, gpt-4, gpt-3.5-turbo
# For Gemini: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash, gemini-1.5-flash-8b
GEMINI_MODEL=gemini-2.0-flash-exp  # Using latest Gemini 2.0 Flash
# OPENAI_MODEL=gpt-4o

# Twilio Credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# MCP Server Configuration
# Comma-separated list of MCP servers in format: transport:path_or_url
MCP_SERVERS=stdio:./servers/subsidy_mcp.py,stdio:./servers/price_mcp.py,stdio:./servers/community/weather_mcp.py

# External API Keys for dynamic data sources
# Add API keys for real-time data sources here
WEATHER_API_KEY=your_weather_api_key_here
MARKET_API_KEY=your_market_api_key_here
AGRO_API_KEY=your_agro_api_key_here