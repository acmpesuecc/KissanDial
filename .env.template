# Environment variables for KissanDial application
# Copy this file to .env and fill in your actual values

# LLM Configuration - Choose your preferred LLM provider
# Option 1: OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Google Gemini (currently active)
GEMINI_API_KEY=your_gemini_api_key_here
LLM_PROVIDER=gemini  # Options: 'openai' or 'gemini'

# Model Selection (optional - defaults to latest models)
GEMINI_MODEL=gemini-2.0-flash-exp  # Latest Gemini 2.0 Flash
# OPENAI_MODEL=gpt-4o

# Twilio Credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# Add any other environment variables as needed
